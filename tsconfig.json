{
  "compilerOptions": {
    "outDir": "./dist",

    "module": "nodenext",
    // "module": "es2022",
    "target": "esnext",
    // "target": "es2024",
    "esModuleInterop": true,
    "types": ["jest", "node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src/**/*"]
}
