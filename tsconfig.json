{
  "compilerOptions": {
    "target": "ES2024", // Último padrão suportado pelo Node 24
    "module": "nodenext", // Habilita ESM com resolução moderna
    "moduleResolution": "nodenext", // Resolve imports no estilo Node ESM
    "esModuleInterop": true, // Permite importar libs CommonJS sem erro
    "strict": true, // Checagem de tipos rigorosa
    "allowImportingTsExtensions": true, // Permite usar .ts nos imports
    "noEmit": true, // Não gera arquivos .js (rodando direto com ts-node)
    "baseUrl": "./src" // Facilita imports absolutos
    // "paths": {
    //   "@core/*": ["core/*"] // Alias para sua pasta core
    // }
  }
  // "include": ["src/**/*"]
}
